@page "/Login"
@inherits LoginBase

<div class="row Login-box">
    <h3 class="text-white fw-bolder m-4"><b>Login</b></h3>

    <div>
        <label>
            <b>
                Enter Your Username :
            </b>
        </label>

        <input @bind="@Username" type="text" class="text-box" autocomplete="on"/>

        <br />

        <label>
            <b>
                Enter Your Password :
            </b>
        </label>

        <input @bind="@Password" type="password" class="text-box" />

    </div>
    <div class="m-4">
        <input type="submit" class="btn-login" value="Enter For Login" @onclick="() => Login_Click()">
            
    </div>

    <div class="signup-notice text-capitalize">
        <h4>if not signup to our site click on <a href="/SignUp" style="color:rgb(223, 164, 0); text-decoration : none;"><b>SignUp</b></a></h4>
    </div>

</div>

